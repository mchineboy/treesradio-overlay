{
  "manifest_version": 2,

  "name": "Trees Radio Cleanup",
  "description": "This will modify the TR page to be a little cleaner.",
  "version": "1.0",
  "background": 
    { "scripts": ["trovly.js"] },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
      {
      "matches": ["https://treesradio.com/*"],
      "css": ["styleext.css"],
      "js": ["jquery.js", "treesclean.js"]
      }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "contextMenus"
  ]
}